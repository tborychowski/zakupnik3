@import "lib"


.select-wrap
	border-radius 5
	background-image url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'%3E%3Cpath fill='%23343a40' d='M2 0L0 2h4zm0 5L0 3h4z'/%3E%3C/svg%3E")
	background-repeat no-repeat
	background-position right .75rem center
	background-size 8px 10px
	border 1 form-element-border
	transition background-color .3s ease-out, border-color .3s ease-out, box-shadow .3s ease-out
	height 34
	display inline-block
	&:focus-within
		background-color rgba(form-element-bg, 0.8)
		border-color accent-color
		shadow 0 0 2 1 accent-color


select
	font inherit
	background none
	border none
	line-height 16px
	box-sizing border-box
	vertical-align top
	padding 2px 10 0
	color form-element-text
	width 100%
	height 100%
	text-indent -2px
	-webkit-appearance none
	-moz-appearance none
	appearance none


input
	font inherit
	line-height 16px
	box-sizing border-box
	border-radius 5
	vertical-align top
	height 34
	padding 2px 10 0
	transition background-color .3s ease-out, border-color .3s ease-out, box-shadow .3s ease-out
	border 1 form-element-border
	color form-element-text
	background-color rgba(form-element-bg, 0.1)


	&:focus
		background-color rgba(form-element-bg, 0.8)
		border-color orange
		shadow 0 0 2 1 orange


label
	display inline-block
	margin-top 1
	vertical-align top
