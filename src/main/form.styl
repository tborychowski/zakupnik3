@import "lib"


.form
	position relative
	font inherit

	.btn-split
	.btn-unsplit
		width 32
		padding 5 0

	.btn-remove
	.btn-cancel
	.btn-save
		display none

	&.edit
		.btn-remove
		.btn-cancel
		.btn-save
			display block

		.btn-add
		.btn-reset
			display none

.flex-filler
	flex 1

.form-row
	display flex
	align-items center
	padding 10 20


.form-row-repeat
	input
		width 30
		margin 0 5
		padding-left 0
		padding-right 0
		text-align center
		-moz-appearance textfield
		appearance textfield

	label
		line-height 20px
		display block



.form-footer
	background #ccc
	border-top #aaa
	padding 10 20

	button
		margin-left 10


	.btn-remove
	.btn-reset
		margin-left 0



.subforms
	padding-top 10

	button
		min-width 0

	.form-row:first-child
		padding-top 10
		padding-bottom 10

	.form-row:nth-child(2)
		padding-top 10

	.form-row:last-child
		padding-bottom 10


	.form-row
		justify-content stretch

		.select-wrap
		input
			margin-right 5

	.category
		width 140

	.description
		flex 1

	.amount
		width 100
		text-align right
