@import "lib"

.year-month-picker
	position relative
	user-select none
	font 20
	display flex
	align-items stretch
	justify-content center
	padding 2 0 0
	height 50
	background #ccc
	border-bottom #aaa

	.btn-today
	.btn-prev
	.btn-next
		border transparent
		background none
		border-radius 4
		font-size inherit
		margin 10
		color #888

		&:focus
		&:hover
			border-color #333
			color #333

	.day
		height 100%
		display flex
		align-items center
		padding 1 10 0

	.btn-today
		position absolute
		top 2
		left 10
		height 27

	&.is-today .btn-today
		opacity 0
		pointer-events none
