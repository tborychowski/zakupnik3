@import "lib"


.table
	height 100%
	overflow-y auto
	padding 0
	cursor default
	font 14/1

	table
		margin 0
		width 100%
		border-collapse collapse
	td
		padding 8 20 6

	.amount
		text-align right

	thead
	tfoot
