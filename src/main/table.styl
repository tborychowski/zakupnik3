		td
			background #ccc
			font-weight 600
	thead
		top 0
		td
			padding-top 13
			padding-bottom 10

	tfoot
		bottom 0

	tbody
	tfoot
		.amount::before
			content 'â‚¬'
			color #666
			margin-right 5
	tbody
