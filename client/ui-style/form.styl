@import "lib"


form
	position relative
	font inherit

	.btn-remove
	.btn-cancel
	.btn-save
		display none


.add
	.btn-add
	.btn-reset
		display block

.edit
	.btn-remove
	.btn-cancel
	.btn-save
		display block

	.btn-add
	.btn-reset
	.btn-edit
		display none


.form-row
	display flex
	align-items center
	justify-content stretch
	padding 5px 20


.flex-filler
	flex 1


.select-wrap
	border-radius 5
	background-image url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'%3E%3Cpath fill='%23343a40' d='M2 0L0 2h4zm0 5L0 3h4z'/%3E%3C/svg%3E")
	background-repeat no-repeat
	background-position right .75rem center
	background-size 8px 10px
	transition background-color .3s ease-out, border-color .3s ease-out, box-shadow .3s ease-out
	height 34
	display inline-block
	border color-bg-dark0
	background-color color-bg-dark0
	&:focus-within
		border-color color-accent
		box-shadow 0 0 2px 1px color-accent


select
	font inherit
	background none
	border none
	line-height 16px
	box-sizing border-box
	vertical-align top
	padding 2 22 0 10
	color color-text-light0
	width 100%
	height 100%
	text-indent -2px
	-webkit-appearance none
	-moz-appearance none
	appearance none


textarea
input
	font inherit
	line-height 16px
	box-sizing border-box
	border-radius 5
	vertical-align top
	height 34
	padding 2 10
	transition background-color .3s ease-out, border-color .3s ease-out, box-shadow .3s ease-out

	border color-bg-dark3
	color color-text-light0
	background-color color-bg-dark0

	&:focus
		border-color color-accent
		box-shadow 0 0 2px 1px color-accent
		outline none

	&:disabled
		opacity 0.5


label
	display inline-block
	margin-top 1
	vertical-align top
