.flex-filler
	flex 1

.form
	position relative
	font inherit
	border 1px solid #ccc
	font-size 13px


	.form-row
		display flex
		align-items center
		padding 10px


	.form-row-repeat input
		width 60px
		margin 0 5px
		text-align center


	.form-row-repeat
		background #eee


	.form-row-repeat label
		line-height 20px
		display block



.form-row-buttons
	background #eee
	border-top 1px solid #ccc

	button
		margin-left 5px

		&:first-child
			margin-left 0




.subforms
	.form-row
		padding 5px 10px 0

	.form-row:first-child
		padding-top 10px
		padding-bottom 10px


	.form-row:nth-child(2)
		padding-top 10px


	.form-row:last-child
		padding-bottom 10px




.btn-split
	background-image url(../assets/split.svg)


.btn-unsplit
	background-image url(../assets/trash.svg)



.form
	.btn-split
	.btn-unsplit
		width 32px
		height 36px
		padding 0
		border 0
		background-color transparent
		background-repeat no-repeat
		background-size 20px
		background-position center




.form .btn-remove
.form .btn-cancel
.form .btn-save
.edit .form .btn-add
	display none


.edit .form
	.btn-remove
	.btn-cancel
	.btn-save
		display block



.subforms
	background #ccc

	.form-row
		justify-content stretch

	.form-row:first-child
		background #eee

	.category
		width 140px

	.description
		flex 1

	.amount
		width 100px
		text-align right

	.form-row select,
	.form-row input
		margin-right 5px



.form input
    display block
    width 100%
    padding .39rem .75rem
    font-size 1rem
    line-height 1.5
    color #495057
    background-color #fff
    background-clip padding-box
    border 1px solid #ced4da
    border-radius .25rem
    transition border-color .15s ease-in-out,box-shadow .15s ease-in-out




.form select
	font inherit
	font-size 1rem
	line-height 1.6
	display inline-block
	width 100%
    color #495057
	padding .4rem 1.75rem .3rem .75rem
	height calc(2.25rem + 2px)
	vertical-align middle
	background #fff url("data:image/svg+xmlcharset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 4 5'%3E%3Cpath fill='%23343a40' d='M2 0L0 2h4zm0 5L0 3h4z'/%3E%3C/svg%3E") no-repeat right .75rem center
	background-size auto auto
	background-size 8px 10px
	border 1px solid #ced4da
	border-radius .25rem
	-webkit-appearance none
	-moz-appearance none
	appearance none



.form select:focus,
.form input:focus
	outline 0
	border-color #80bdff
	box-shadow 0 0 0 .2rem #007bff4d




.form button
	display inline-block
	font-weight 400
	text-align center
	white-space nowrap
	vertical-align middle
	-webkit-user-select none
	-moz-user-select none
	user-select none
	border 1px solid transparent
	padding .375rem .75rem
	font-size 1rem
	line-height 1.5
	border-radius .25rem
	transition color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out
	cursor pointer


.form button::-moz-focus-inner
	padding 0
	border 0 solid transparent


.form button:disabled
	opacity 0.65
	cursor default




.form button
	color #666
	background-color rgba(204,204,204,0.5)
	border-color rgba(170,170,170,0.5)


.form button:hover
	color #333
	background-color rgba(204,204,204,0.5)
	border-color rgba(204,204,204,0.5)


.form button:focus
	box-shadow 0 0 0 0.2rem rgba(108, 117, 125, 0.5)


.form button:not(:disabled):active
	color #888
	background-color rgba(204,204,204,0.4)
	border-color rgba(204,204,204,0.4)



.form .primary
	color #fff
	background-color #16499a
	border-color #16499a


.form .primary:hover
	color #fff
	background-color #0069d9
	border-color #0062cc


.form .primary:focus
	box-shadow 0 0 0 0.2rem rgba(0, 123, 255, 0.5)


.form .primary:not(:disabled):active
	color rgba(255,255,255,0.5)
	background-color rgba(22,73,154,0.3)
	border-color rgba(22,73,154,0.3)





.form .success
	color #fff
	background-color #57901d
	border-color #57901d


.form .success:hover
	color #fff
	background-color #57901d
	border-color #57901d


.form .success:focus
	box-shadow 0 0 0 0.2rem rgba(40, 167, 69, 0.5)


.form .success:not(:disabled):active
	color rgba(255,255,255,0.5)
	background-color rgba(87,144,29,0.3)
	border-color rgba(87,144,29,0.3)




.form .warning
	color #fff
	background-color #fa6800
	border-color #fa6800


.form .warning:hover
	color #212529
	background-color #fa6800
	border-color #fa6800


.form .warning:focus
	box-shadow 0 0 0 0.2rem rgba(250,104,0,0.3)


.form .warning:not(:disabled):active
	color rgba(255,255,255,0.5)
	background-color rgba(250,104,0,0.3)
	border-color rgba(250,104,0,0.3)




.form .danger
	color #fff
	background-color #9a1616
	border-color #9a1616


.form .danger:hover
	color #fff
	background-color #9a1616
	border-color #9a1616


.form .danger:focus
	box-shadow 0 0 0 0.2rem rgba(220, 53, 69, 0.5)


.form .danger:not(:disabled):active
	color rgba(255,255,255,0.5)
	background-color rgba(154,22,22,0.3)
	border-color rgba(154,22,22,0.3)





