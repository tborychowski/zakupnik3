@import "lib"


.form
	position relative
	font inherit

	.btn-remove
	.btn-cancel
	.btn-save
		display none

	&.edit
		.btn-remove
		.btn-cancel
		.btn-save
			display block

		.btn-add
		.btn-reset
			display none

.flex-filler
	flex 1

.form-row
	display flex
	align-items center
	justify-content stretch
	padding 5px 20

	textarea
		flex 1
		padding 10
		margin 10 0
		min-height 38px


.form-footer
	background #ccc
	border-top #aaa
	padding 10 20

	button
		margin-left 10


	.btn-remove
	.btn-reset
		margin-left 0
