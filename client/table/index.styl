@import "lib"


.table
	overflow-y auto
	padding 0
	cursor default
	font 14/1
	position relative
	bg bg-light

	table
		margin 0
		width 100%
		height 100%
		border-collapse collapse
		table-layout fixed

	td
		padding 12 20 10

	.date
		width 120

	.amount
		width 120
		text-align right

	.cat
		width 80
		padding-left 0
		padding-right 0
		text-align center

	thead
	tfoot
		position sticky
		height 36px
		td
			background bg-dark
			font-weight 600

	thead
		top 0
		td
			padding-top 13
			padding-bottom 10
			border-bottom border-light

	tfoot
		bottom 0
		width 100%
		position sticky

		td
			border-top border-light


	tbody
	tfoot
		.amount::before
			content 'â‚¬'
			color #666
			margin-right 5

	tbody
		tr:nth-child(odd)
			background bg-superlight

		.table-row:hover
			background accent-light

		tr td
			height 30px

	.row-filler td
		height auto
		padding 0

	.empty-row
		td
			vertical-align middle
			text-align center
			height auto


.table-filter-box
	position fixed
	right 20px
	top 12px

	.ion-md-search
		position absolute
		top 3px
		left 7px
		font-size 20px
		color #33333380

	.table-clear-filter
		color #33333380
		position absolute
		padding 3px 3px
		right 4px
		font-size 20px
		display none
		&:hover
			color #333

	.table-filter-input
		size 200 26
		font-weight normal
		padding 5 22 3 30
		text-align center
		text-indent -14px
		bg #fff5

		&:focus
			text-indent 0
			text-align left
			bg bg-superlight


	&.filtered
		.table-filter-input
			bg bg-superlight
			text-indent 0
			text-align left

		.table-clear-filter
			display inline-block
