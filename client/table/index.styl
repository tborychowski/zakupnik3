@import "lib"


.table
	height 100%
	overflow-y auto
	padding 0
	cursor default
	font 14/1
	position relative

	table
		margin 0
		width 100%
		border-collapse collapse
	td
		padding 8 20 6

	.amount
		text-align right

	thead
	tfoot
		position sticky
		td
			background #ccc
			font-weight 600
	thead
		top 0
		td
			padding-top 13
			padding-bottom 10

	tfoot
		bottom 0
		position absolute
		width 100%

	tbody
	tfoot
		.amount::before
			content 'â‚¬'
			color #666
			margin-right 5
	tbody
		tr:nth-child(odd)
			background #fcfcfc

		tr:hover
			background #aaa


.table-filter-cell
	width 100%

.table-filter-cell-inner
	position relative
	float left

	.ion-md-search
		position absolute
		top 2px
		left 7px
		font-size 16px
		color #33333380


.table-filter
	size 160 20
	font-weight normal
	padding 1 8 0 24
	font 13
	text-align center
	text-indent -20px

	&:focus
		text-indent 0
		text-align left
