@import "lib"

.categories
	position absolute
	left 0
	top 0
	bottom 0
	width 299px
	transform translateX(0)
	transition transform .3s ease-out

	h1
		background color-bg-dark1
		font-size 20px
		font-weight 400
		margin 0 0 1px
		padding 0 13 0 20
		height 49px
		display flex
		align-items center
		justify-content space-between

		.btn-outline
			font-size 30px
			font-weight 100
			margin -3px -1px 0 0

		.btn-settings
			padding-top 7px
			svg
				width 22px


	.categories-wrap
		bg color-bg-dark0
		overflow-y auto
		position absolute
		top 50px
		bottom 0
		width 100%
		-webkit-overflow-scrolling touch
		user-select none


	.category-box
		margin 0
		padding 5 0
		border-left color-accent

		&:not(:first-child)
			border-top color-bg-dark3

		&.income
			border-left-color color-accent-alt

		&.expense
			border-left-color color-accent


	.editable-cat
		cursor default
		display flex
		flex-wrap wrap
		justify-content space-between
		align-items center
		cursor pointer
		&:hover
			background color-highlight

		&.selected
			box-shadow 5px 0 0 color-accent inset;


	h2.editable-cat
		font-size 17px
		font-weight 100
		text-transform uppercase
		position relative
		padding 7 20
		margin 0


	li.editable-cat
		padding 5 20
		opacity 0.7


	.editable-cat.in-edit
		background color-accent


	.pill
		page-break-after always


	.tags
		color alpha(color-text-light0, 50%)
		width 100%
		font-size 13px
		padding 5px 0 0
		word-wrap break-word
		display none

		&:empty
			display none !important

	&.add
	&.edit
		.tags
			display block



	.no-results
		text-align center
		top 30%
		position relative


	&.view
		.btn-settings
			display block

		.btn-close
			display none

	&.add
	&.edit
		.btn-settings
			display none

		.btn-close
			display block

		.categories-wrap
			top 274px




@media (max-width: 900px)
	.categories
		transform translateX(-100%)
