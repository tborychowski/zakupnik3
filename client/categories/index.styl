@import "lib"

.categories
	overflow-y auto

	.categories-wrap
		height 100%

	h1
	form
		background #ccc
		margin 0
		padding 10px 0
		border-bottom 1px solid #888
		position sticky
		top 0

	h1
		padding 12px 20px 10px
		font-size 20px
		text-align center

		button
			position absolute
			left 20px
			top 9px

	.form-row
		.select-wrap
			min-width 140px
			width 180px

		input
		.select-wrap
			min-width 0

		.select-wrap
		.name
			margin-right 5px

		.keywords
			flex 1

		.btn-cancel
			margin-right 10px

.editable-cat
	cursor pointer

	&:hover
		text-decoration underline

	&.in-edit
		background yellow


form
	&.view
		opacity 0.4
		pointer-events none
	&.add
	&.edit
		display block
		opacity 1
