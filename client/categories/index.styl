@import "lib"

.categories

	h1
	form
		background bg-dark
		margin 0 0 1px
		padding 10px 0

	h1
		font-size 20px
		height 49px
		display flex
		align-items center
		justify-content center

		button
			position absolute
			right 8px

	.form-row
		.select-wrap
		&>input
			flex 1

		.btn-cancel
			margin-right 10px

	.cat-groups
		margin 0 0 0 0
		padding 0
		list-style none

	h2
		margin 20px 0 5px

	.editable-cat
		padding 5px 20px
		cursor default

		em
			color text-light
			font-style normal
			display block
			margin-left 10px
			font-size 13px
			padding 5px 0 0


	.categories-wrap
		bg bg-light
		overflow-y auto
		position absolute
		top 50px
		bottom 0
		width 100%


	.no-results
		text-align center
		top 30%
		position relative

	&.view
		form
			display none

		.ion-md-settings
			display block

		.ion-md-close
			display none

	&.add
	&.edit
		form
			display block

		.ion-md-settings
			display none

		.ion-md-close
			display block

		.categories-wrap
			top 241px


		.editable-cat
			cursor pointer
			&:hover
				background border-dark

			&.in-edit
				background accent-color

