@import "lib"

.categories

	h1
	form
		background bg-dark
		margin 0 0 1px
		padding 10px 0

	h1
		font-size 20px
		height 49px
		display flex
		align-items center
		justify-content space-between
		padding 0 13 0 20

	.form-row
		.select-wrap
		&>input
			flex 1

		.btn-cancel
			margin-right 10px

	.cat-groups
		margin 0 0 0 0
		padding 0
		list-style none

	.editable-cat
		cursor default
		display flex
		flex-wrap wrap
		justify-content space-between
		align-items center
		cursor pointer
		&:hover
			background accent-light

	h2.editable-cat
		margin 2 0 5
		font-size 17px
		padding 15 20 15 20
		position relative
		&:not(:first-child)
			margin 20 0 5
			border-top border-dark

		.cat-percent
			position absolute
			bottom 2px
			height 7px
			border-radius 0 10px 10px 0
			background darken(accent-color, 10%)
			box-shadow 0 2px 1px rgba(#000, .3) inset

	li.editable-cat
		padding 5 20 5 20


	.keys
		color text-light
		display block
		width 100%
		font-size 13px
		padding 5px 0 0

		&:empty
			display none

	.categories-wrap
		bg bg-light
		overflow-y auto
		position absolute
		top 50px
		bottom 0
		width 100%
		-webkit-overflow-scrolling touch
		user-select none


	.no-results
		text-align center
		top 30%
		position relative

	&.view
		form
			display none

		.ion-md-settings
			display block

		.ion-md-close
			display none

	&.add
	&.edit
		form
			display block

		.ion-md-settings
			display none

		.ion-md-close
			display block

		.categories-wrap
			top 241px

		.editable-cat.in-edit
			background accent-color
