@import "lib"

chunk-spacing = 1px

.percent-bar
	position relative
	user-select none
	background color-bg-dark1
	border-bottom color-bg-dark3
	padding 0

	.percent-bar-wrapper
		background color-bg-dark0
		width 100%
		padding chunk-spacing 0
		display flex
		flex-flow column
		align-items center
		justify-content stretch

	.percent-bar-row
		flex 1
		width 100%
		height 22px
		padding chunk-spacing
		font-size 8px
		display flex
		flex-flow row
		align-items center
		justify-content stretch

	.percent-bar-chunk
		display flex
		flex-flow row
		align-items center
		justify-content center
		background color-bg-dark1
		color alpha(color-text-light0, 50%)
		height 100%
		margin 0 chunk-spacing
		white-space nowrap
		overflow hidden
		text-overflow ellipsis
		border-radius 3px

	.income-row .percent-bar-chunk
		background alpha(color-accent-alt, 30%)

	.expense-row .percent-bar-chunk
		background alpha(color-accent, 30%)
